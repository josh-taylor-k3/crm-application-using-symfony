{% extends status_code == 403 ? '@OroUI/Default/index.html.twig' : '@Twig/layout.html.twig' %}

{% block head_script %}
{% endblock %}

{% block header %}
{% endblock %}

{% block before_content %}
{% endblock %}

{% block title %}
    {{ exception.message }} ({{ status_code }} {{ status_text }})
{% endblock %}

{% block body %}
    {% include '@Twig/Exception/exception.html.twig' %}
{% endblock %}

{% block content %}
    <div class="alert alert-block pagination-centered popup-box">
        <h1>{{ status_code }} {{ status_text }}</h1>
        <img src="{{ asset('bundles/oroui/img/503.png') }}" alt="Error page" />
    </div>
{% endblock %}
