{% extends ':Default:oneColumn.html.twig' %}

{% macro renderWidget(widget) %}
    <div class="quick-launchpad-widget span6">
        <div class="clearfix">
            <div class="image-wrap pull-left">
                <p class="text-center">
                    {{ widget.label|trans }}
                </p>
                <a href="javascript:void(0);" class="widget-image {{ widget.image }}"></a>
            </div>
            <div class="list-wrap pull-left">
                <ul class="nav nav-list">
                    {% for link in widget.links %}
                        <li class="{{ loop.last ? 'last' : '' }}">
                            <a href="{{  link.url|raw }}" title="{{ link.label|trans }}">{{ link.label|trans }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endmacro %}
{% import _self as __ %}

{% block head_style %}
    {{ parent() }}
    {% stylesheets
        'bundles/acmedemo/css/demo.less'

        debug=false
        filter='cssrewrite, lessphp, yui_css'
        output='css/oro.demo.css'
    %}
        <link rel="stylesheet" media="all" href="{{ asset_url }}" />
    {% endstylesheets %}

{% endblock %}

{% block content %}
    {# bodyclass block could not be used due to has navigation issues #}
    <script type="text/javascript">
        $(function() {
            $('body').addClass('quick-launchpad');
        })
    </script>

    <div class="container">
        <h3>{{ 'Quick Launchpad'|trans }}</h3>

        {% set widgetsArray = [
            {
                label: 'Accounts',
                links: [
                    {url: path('oro_account_index'), label: 'View Accounts'},
                    {url: path('oro_account_create'), label: 'Create Account'}
                ],
                image: 'accounts-image'
            },
            {
                label: 'Contacts',
                links: [
                    {url: path('oro_contact_index'), label: 'View Contacts'},
                    {url: path('oro_contact_create'), label: 'Create Contact'}
                ],
                image: 'contacts-image'
            },
        ] %}

        {% for widget in widgetsArray %}
            {% if loop.index is odd %}<div class="row">{% endif %}
            {{ __.renderWidget(widget) }}
            {% if loop.index is even %}</div>{% endif %}
        {% endfor %}
    </div>
{% endblock %}
